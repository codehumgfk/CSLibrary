<Window x:Class="YieldCurveBuilderApp.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YieldCurveBuilderApp"
        mc:Ignorable="d"
        Title="In progress. Sorry ... " Height="150" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Content="Please wait till all processes are done." FontSize="15"/>
        <ProgressBar Grid.Row="2" Height="15" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="290" IsIndeterminate="True"/>
    </Grid>
</Window>
